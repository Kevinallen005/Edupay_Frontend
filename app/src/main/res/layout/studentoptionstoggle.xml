<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/curved_border_lightgrey"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/studentprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:textSize="18sp"
            android:drawableStart="@drawable/profileblue"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:text="Profile" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgrey" />

        <TextView
            android:id="@+id/imposefee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:textSize="18sp"
            android:drawableStart="@drawable/imposefeegroup"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:text="Impose Fee" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgrey" />

        <TextView
            android:id="@+id/scholarship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableStart="@drawable/scholar"
            android:textSize="18sp"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:text="Award Scholarship" />




    </LinearLayout>

</LinearLayout>