<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".MybuspassActivity"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/homeicon"
            android:clickable="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/smalllogo" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/icon" />

    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="80dp"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        app:cardCornerRadius="16dp"
        android:padding="24dp"
        app:cardElevation="8dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="22dp"
            android:background="@drawable/curved_border_lightyellow"
            android:gravity="center_horizontal">

            <!-- Larger Photo full width -->
            <ImageView
                android:id="@+id/photo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/rzp_white_border_black_bg"
                android:scaleType="centerCrop"
                android:contentDescription="Student photo" />

            <!-- Name and ID below photo -->
            <TextView
                android:id="@+id/tvStudentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akash Kumar"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvStudentId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student ID: 101"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/black" />

            <!-- Pass Details left aligned -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <TextView
                    android:id="@+id/tvRouteName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Route: Minjur"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvBoardingPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Boarding Point: Manali New Town"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:paddingTop="5dp" />

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fare Paid: â‚¹ 45000"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:paddingTop="5dp" />

                <TextView
                    android:id="@+id/tvVia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Via: Manali New Town, Mathur M.M.D.A., Madhavaram Milk ..."
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:paddingTop="5dp"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Validity Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginTop="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <TextView
                    android:id="@+id/tvvalidFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valid From: 2025-09-01"
                    android:textSize="10sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvvalidUntil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valid Until: 2025-09-30"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:paddingStart="18dp" />

            </LinearLayout>

            <!-- Big status text below -->
            <TextView
                android:id="@+id/statuspass"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:text="PENDING"
                android:gravity="center"
                android:textAllCaps="true"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="@drawable/curved_border_red"
                android:layout_marginTop="26dp"
                android:layout_gravity="center"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>



    

</LinearLayout>
